@model OOP.Models.Ankieta

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_SpecialLayout.cshtml";
    ViewBag.UseSpecialNavbar = true;
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Ankieta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Pracownik.Imie)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Pracownik.Imie)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Data)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Data)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" id="deleteBtn" /> |
            <button class="btn btn-default" id="backToListBtn">Back to List</button>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script>
        document.getElementById("deleteBtn").addEventListener("click", function () {
            Toastify({
                text: "Usunięto ankietę!",
                duration: 1000,
                backgroundColor: "#4CAF50",
                className: "info",
                style: {
                    textAlign: "center"
                },
            }).showToast();
            setTimeout(function() {
            window.location.href = "@Url.Action("Index", "Ankietas")";
            }, 2000);
        });

        document.getElementById("backToListBtn").addEventListener("click", function (event) {
            event.preventDefault();
            Toastify({
                text: "Nie usunięto ankiety!",
                duration: 1000,
                backgroundColor: "#808080",
                className: "info",
                style: {
                    textAlign: "center"
                },
            }).showToast();

            setTimeout(function() {
                window.location.href = "@Url.Action("Index", "Ankietas")";
            }, 2000);
        });
    </script>
}
