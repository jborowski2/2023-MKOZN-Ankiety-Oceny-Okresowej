@model OOP.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Numer telefonu";
}
<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>

    @using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Dodaj numer telefonu</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="row">
            @Html.LabelFor(m => m.Number, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="offset-md-2 col-md-10">
                <input type="submit" class="btn btn-outline-dark" value="Prześlij" id="addPhoneNumberBtn" />
            </div>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script>
        document.getElementById("addPhoneNumberBtn").addEventListener("click", function () {
            Toastify({
                text: "Numer telefonu został dodany!",
                duration: 1000,
                gravity: "bottom",
                backgroundColor: "#4CAF50",
                className: "info",
                style: {
                    textAlign: "center"
                }
            }).showToast();
        });
    </script>
}
