<div>
    @Html.ActionLink("Powrót", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script>
        document.getElementById("createPracownikBtn").addEventListener("click", function () {
            Toastify({
                text: "Pracownik został utworzony!",
                duration: 3000,
                backgroundColor: "#4caf50",
                className: "info",
                style: {
                    textAlign: "center"
                }
            }).showToast();
        });
    </script>
