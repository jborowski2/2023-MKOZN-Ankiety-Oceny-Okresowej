@{
    Layout = null;
    bool isPracownik = User.IsInRole("Pracownik");
}


<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<style>
    .container {
        max-width: 90%;
    }

    .white, .font, .font_type {
        color: #fff;
        font-size: calc(7px + 0.5vw);
        white-space: nowrap;
    }

    .font_type {
        font-family: Arial;
        padding-top: 1px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border-color: #fff;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    .dark-theme {
        background-color: #000;
        color: #fff;
    }

    .dark-theme-navbar {
        background-color: #012404;
        color: #fff;
    }

    .container {
        width: 100%;
    }
</style>

<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm" style="background-color: #012404;">
        <div class="container">
            <b>
                @Html.ActionLink("Politechnika Białostocka - System oceny pracowników", "Index", "Home", new { area = "" }, new { @class = "navbar-brand font" })
            </b>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Przełącz nawigację" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <button type="button" class="btn btn-light" id="theme-toggle" onclick="toggleTheme()" style="white-space: nowrap;">Przełącz motyw</button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="navbarSupportedContent">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        @Html.ActionLink("Strona główna", "Index", "Home", new { area = "" }, new { @class = "nav-link white" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Informacje", "About", "Home", new { area = "" }, new { @class = "nav-link white" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Kontakt", "Contact", "Home", new { area = "" }, new { @class = "nav-link white" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Ankiety", "Index", "Ankietas", new { area = "" }, new { @class = "nav-link white" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Zgłoszenia", "Report", "Home", new { area = "" }, new { @class = "nav-link white" })
                    </li>
                    @if (!isPracownik)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Rozwiń
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="@Url.Action("Index", "Schemats")">Schematy Ankiet</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Pracowniks")">Pracownicy</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Osiagniecies")">Osiągnięcia</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Komisjas")">Komisje</a>
                            </div>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const themeToggle = document.getElementById("theme-toggle");
            const body = document.body;
            const navbar = document.querySelector('.navbar');
            const elementsToChangeColor = document.querySelectorAll('table, th, td, .white');

            const savedTheme = localStorage.getItem("theme");
            if (savedTheme) {
                body.classList.toggle("dark-theme", savedTheme === "dark");
                navbar.classList.toggle("dark-theme-navbar", savedTheme === "dark");

                if (savedTheme === "dark") {
                    elementsToChangeColor.forEach(element => {
                        if (element.tagName === 'TABLE') {
                            element.style.borderColor = "#fff";
                        } else {
                            element.style.color = "#fff";

                        }
                    });
                }
            }

            themeToggle.addEventListener("click", function () {
                body.classList.toggle("dark-theme");
                navbar.classList.toggle("dark-theme-navbar", body.classList.contains("dark-theme"));

                elementsToChangeColor.forEach(element => {
                    if (body.classList.contains("dark-theme")) {
                        if (element.tagName === 'TABLE') {
                        } else {
                            element.style.color = "#fff";
                            element.style.borderColor = "#fff";
                        }
                    } else {
                        if (element.tagName === 'TABLE') {
                        } else {
                            element.style.color = "";
                            element.style.borderColor = "";
                        }
                    }
                });

                const currentTheme = body.classList.contains("dark-theme") ? "dark" : "light";
                localStorage.setItem("theme", currentTheme);

                if (body.classList.contains("dark-theme")) {
                    document.querySelectorAll('table').forEach(table => {
                        table.style.borderColor = "#fff";
                    });
                } else {
                    document.querySelectorAll('table').forEach(table => {
                        table.style.borderColor = "";
                    });
                }
            });
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const dropdownToggle = document.querySelector('.dropdown-toggle');
            const dropdownMenu = document.querySelector('.dropdown-menu');

            dropdownToggle.addEventListener('click', function (event) {
                event.preventDefault();
                event.stopPropagation();

                if (dropdownMenu.style.display === 'block') {
                    dropdownMenu.style.display = 'none';
                } else {
                    dropdownMenu.style.display = 'block';
                }
            });

            document.addEventListener('click', function () {
                dropdownMenu.style.display = 'none';
            });
        });
    </script>

</body>