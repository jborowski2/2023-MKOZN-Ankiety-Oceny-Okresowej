@model OOP.Models.Komisja

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_SpecialLayout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Komisja</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.KomisjaName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.KomisjaName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.KomisjaType)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.KomisjaType)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" id="deleteBtn" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
    <script>
        document.getElementById("deleteBtn").addEventListener("click", function () {
            Toastify({
                text: "Komisja została usunięta!",
                duration: 1000,
                backgroundColor: "#FF5733",
                className: "info",
                style: {
                    textAlign: "center"
                }
            }).showToast();
        });
    </script>
}
